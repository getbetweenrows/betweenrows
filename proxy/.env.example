# Admin database (SQLite default; use postgres:// for shared backend)
DATABASE_URL=sqlite://proxy_admin.db?mode=rwc

# Encryption key for secret config values (AES-256-GCM)
# Generate: openssl rand -hex 32
ENCRYPTION_KEY=your-64-char-hex-string-here

# Default admin user (auto-seeded on first start)
PROXY_ADMIN_USER=admin
PROXY_ADMIN_PASSWORD=changeme
PROXY_ADMIN_TENANT=default

# JWT signing key for Admin REST API tokens
# Generate: openssl rand -hex 32
ADMIN_JWT_SECRET=your-jwt-secret-here
ADMIN_JWT_EXPIRY_HOURS=24

# Listen addresses
PROXY_BIND_ADDR=0.0.0.0:5434
ADMIN_BIND_ADDR=0.0.0.0:5435
