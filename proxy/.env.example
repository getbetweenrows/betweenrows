# Admin database (SQLite default; use postgres:// for shared backend)
BR_ADMIN_DATABASE_URL=sqlite://proxy_admin.db?mode=rwc

# Encryption key for secret config values (AES-256-GCM)
# Generate: openssl rand -hex 32
BR_ENCRYPTION_KEY=your-64-char-hex-string-here

# Default admin user (auto-seeded on first start)
# BR_ADMIN_PASSWORD is REQUIRED on first boot â€” the app will exit if unset
BR_ADMIN_USER=admin
BR_ADMIN_PASSWORD=             # REQUIRED: set a strong password
BR_ADMIN_TENANT=default

# JWT signing key for Admin REST API tokens
# Generate: openssl rand -hex 32
BR_ADMIN_JWT_SECRET=your-jwt-secret-here
BR_ADMIN_JWT_EXPIRY_HOURS=24

# Listen addresses
BR_PROXY_BIND_ADDR=0.0.0.0:5434
BR_ADMIN_BIND_ADDR=0.0.0.0:5435

# CORS allowed origins for the Admin API (comma-separated, empty = same-origin only)
# BR_CORS_ALLOWED_ORIGINS=https://app.example.com
